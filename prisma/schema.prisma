generator client {
  provider = "prisma-client-js"
}

// FUTURE: fix for prod env
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// FUTURE: need to implement `on delete cascade` https://www.prisma.io/docs/orm/prisma-schema/data-model/relations/referential-actions#cascade
model Listing {
  id            String    @id @default(cuid())
  deposit       Decimal?  @db.Money
  imageUrls     String[]
  description   String
  beds          Int
  baths         Int
  // Unit of measurement is in meters squared (sqm)
  area          Decimal   @db.Decimal(24, 2) // FUTURE: this should be flexible in terms of units of measurement (sqft, etc.)
  availableDate DateTime? @db.Date
  /// Current and previous prices of the listing. The current price is the first entry in the list.
  prices        Price[]
  ratings       Rating[]
  address       Address?
  /// User that created this listing.
  user          User      @relation(fields: [userId], references: [id])
  userId        String

  @@map("listing")
}

// Each listing must have its current and previous prices recorded.
model Price {
  id        String   @id @default(cuid())
  value     Decimal  @db.Money
  /// The price is effective on the day that it is listed.
  startDate DateTime @default(dbgenerated("CURRENT_DATE")) @db.Date
  /// Change this to the date when the `value` is changed.
  endDate   DateTime @default("9999-12-31T00:00:00.000Z") @db.Date
  isCurrent Boolean  @default(true)
  listing   Listing  @relation(fields: [listingId], references: [id])
  listingId String
  // FUTURE: Add currency to support intl

  @@map("price")
}

/// Each listing may have zero (0) or more ratings.
model Rating {
  id        String  @id @default(cuid())
  value     Int /// Range is between one (1) to five (5)
  listing   Listing @relation(fields: [listingId], references: [id])
  listingId String

  @@map("rating")
}

// FUTURE: user must only be able to give one rating per listing ;3

/// Each address must be associated with one (1) listing. (for now)
model Address {
  id          String  @id @default(cuid())
  addressLine String
  city        String
  state       String
  zipcode     String?
  country     String
  latitude    Decimal @db.Decimal(16, 10)
  longitude   Decimal @db.Decimal(16, 10)
  listing     Listing @relation(fields: [listingId], references: [id])
  listingId   String  @unique

  @@map("address")
}

/// Each user can have zero (0) or more listings.
model User {
  id            String    @id @default(cuid())
  name          String?
  contactNumber String?
  email         String    @unique
  emailVerified DateTime?
  listings      Listing[]
  image         String?
  accounts      Account[]
  sessions      Session[]

  @@map("user")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @map("refreshToken") @db.Text
  access_token      String? @map("accessToken") @db.Text
  expires_at        Int?    @map("expiresAt")
  token_type        String? @map("tokenType")
  scope             String?
  id_token          String? @map("idToken") @db.Text
  session_state     String? @map("sessionState")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("account")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("session")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_token")
}
